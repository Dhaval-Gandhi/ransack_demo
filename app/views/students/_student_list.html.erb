<table>
  <thead>
    <tr>
      <th><%= sort_link(@search, :name) %></th>
      <th>City</th>
      <th>Marks</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |stud| %>
      <tr>
        <td><%= stud.name %></td>
        <td><%= stud.city %></td>
        <td><%= stud.marks %></td>
      </tr>
    <% end %>
  </tbody>
</table>
